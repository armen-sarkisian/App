            top: 100px;
            left: 100px;
        }

        .textInpSt {
            margin: 5px;
            width: 350px;
            height: 35px;
            border-radius: 5px;
            font-size: 27px;
            color: #ff6a00;
            border-color: rgba(233, 172, 97, 0.82);
            border-style: double;
        }

        .labelSt {
            margin: 0px;
            padding-left: 10px;
