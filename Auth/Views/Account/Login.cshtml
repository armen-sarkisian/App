@model Auth.ViewModels.LoginModel
  
<form method="post" action="~/Account/Login" asp-anti-forgery="true">
    <div asp-validation-summary="ModelOnly" />
    <div class="AuthForm">
        <div class="form-group">
            <label class="HeadSt">Вход на сайт</label> <br /> <br /> <br />
            <label class="labelSt" asp-for="Email">Введите логин</label>
            &emsp;&emsp;&ensp;
            <input class="input" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label class="labelSt" asp-for="Password">Введите пароль</label>
            &emsp;&nbsp;
            <input class="input" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btnInpSt" />
        </div>
    </div>
    <input type="button" class="btnInpSt" id="admin" value="Кабинет администратора" style="top: 20px" onclick="window.location.href='@Url.Action("Home", "Admin")';" />
</form>

