        width: 300px;
    }

    .btnAdd {
        white-space: normal;
        width: 150px;
        height: 50px;
        font-size: 15px;
        color: #0094ff;
    }

        .btnAdd:hover {
            background-color: #c5c7d0;
        }

        .btnAdd:active {
            background-color: #e2d0bb;
        }
</style>
