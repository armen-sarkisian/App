@model IEnumerable<Auth.Models.User>

@{
    ViewBag.Title = "Admin panel";
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Css/BootstrapTableCss.css" rel="stylesheet" />
<body>
    <div id="head" >
        <h2>Вы зашли в панель администратора</h2>
        <h2>Ваши зарегистрированные компании:</h2>
    </div>

    <div class="container, mainTable" id="mainForm">
        <div class="row">
            <div id="no-more-tables">
                <table class="col-md-12 table-bordered table-striped table-condensed cf">
                    <thead class="cf">
                        <tr>
                            <th class="idStyle">
                                <h5>№</h5>
                            </th>
                            <th>
                                <h5>Логин компании</h5>
                            </th>
                            <th>
                                <h5>Пароль</h5>
                            </th>
                            <th>
                                <h5>Дата добавления</h5>
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int a = 1;
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => a)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Login)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    @using (Html.BeginForm("DeleteCompany", "Admin", FormMethod.Post, new { @id = "Form1" }))
                                    {
                                        <td style="border-color: white; background-color: white">
                                            <form action="~/Admin/DeleteCompany/" method="post">
                                                <button type="submit" class="deleteCompanyBtn" title="Удалить текущую компанию" name="Id" value="@item.Id"><img src="~/images/deleteImg.png" class="deleteCompanyBtn" /></button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                                a++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="buttonsBlock">
        <div style="text-align:left;">
            <input type="button" class="btnAdd" value="Добавить новую компанию" onclick="window.location.href='@Url.Action("AddNewCompany", "Admin")';" />
        </div>
    </div>

    @using (Html.BeginForm("DeleteAllUsers", "Admin", FormMethod.Post, new { @id = "Form2" }))
    {
        <div id="buttonsBlock">
            <div style="text-align:left;">
                <form action="~/Admin/DeleteAllUsers/" method="post">
                    <input type="submit" class="btnAdd" style="position: absolute; top: 60px" value="Удалить все компании" />
                </form>
            </div>
        </div>
    }
    <div id="buttonsBlock">
        <div style="text-align:left;">
            <input type="button" class="btnAdd" style="position: absolute; top: 120px" value="Выход" onclick="window.location.href='@Url.Action("Logout", "Account")';" />
        </div>
    </div>


</body>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("body").on("submit", "#Form1", function () {
        return confirm("Вы действительно хотите удалить компанию?");
    });
</script>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("body").on("submit", "#Form2", function () {
        return confirm("Вы действительно хотите удалить все компании?");
    });
</script>





