@model Auth.Models.User

@{
    ViewData["Title"] = "AddNewCompany";  
}

<body>
    <div id="head">
        <h2>Заполните форму ниже для добавления новой компании</h2>
    </div>
    <div id="mainForm">
        <form action="AddNewCompany" method="post">
            <div class="form-group">
                <input type="text" class="input" asp-for="Login" name="Login" placeholder="Введите логин компании" style="width: 380px" required />

            </div>
            <div class="form-group">
                <input type="text" class="input" asp-for="Password" name="Password" placeholder="Введите пароль для нее" style="top: 30px; width: 380px" required />
            </div>
            <div class="form-group">
                <input type="text" class="input" name="CompanyName" placeholder="Введите название компании" size="28" />
            </div>
            <div class="form-group">
                <select class="input" name="OwnershipType">
                    <option disabled>Укажите форму собственности</option>
                    <option>ООО</option>
                    <option>ОАО</option>
                    <option>ЗАО</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" class="input" name="Adress" placeholder="Укажите почтовый адрес" size="28" />
            </div>
            <div class="form-group">
                <input type="text" class="input" name="LegalAdress" placeholder="Укажите юридический адрес" size="28" />
            </div>
            <div class="form-group">
                <input type="text" class="input" name="CheckingAccount" placeholder="Введите рассчетный счет" size="28" />
            </div>
            <div class="form-group">
                <input type="text" class="input" name="BankBin" placeholder="Укажите банк бин" size="28" />
            </div>
            <div class="form-group">
                <input type="text" class="input" name="UNP" placeholder="Введите УНП" size="28" />
            </div>
            <div class="form-group">
                <input type="text" class="input" name="OKPO" placeholder="Введите ОКПО" size="28" />
            </div>
            <div class="form-group">
                <input type="text" class="input" name="ONPF" placeholder="Введите ОНПФ" size="28" />
            </div>
            <div class="form-group">
                <select name="FolderLanguage" class="input">
                    <option disabled>Выберите язык отображения папок</option>
                    <option>Русский</option>
                    <option>Украинский</option>
                    <option>Белорусский</option>
                </select>
            </div>
            <div class="btnAdd" style="margin-top: 20px; display: flex;">
                <input type="submit" value="Добавить" />
                <input type="button" style="margin-left: 20px; " value="Вернуться в панель администратора" onclick="window.location.href='@Url.Action("Index", "Admin")';" />
            </div>
            <div style="color: blue; padding-top: 10px; font-weight: bold; font-size: 16px; white-space: normal">
                <span asp-validation-for="Login" style="color: red;  font-weight: bold; font-size: 16px;"></span>
                <span asp-validation-for="Password" style="color: red;   font-weight: bold; font-size: 16px;"></span>
                @ViewData["Successfull"]
            </div>
        </form>
    </div>

</body>


<style>

    #head {
        width: 400px;
        position: absolute;
        top: 50px;
        left: 635px;
        white-space: normal;
    }
    #mainForm {
        border: 1px solid gray;
        padding-left: 30px;
        padding-top: 30px;
        height: 640px;
        width: 440px;
        position: absolute;
        top: 150px;
        left: 635px;
    }

    .input {
        border-color: #6fc2ff;
        border-radius: 4px;
        height: 30px;
        width: 230px;
    }

    .btnAdd {
        width: 150px;
        height: 30px;
        font-size: 15px;
        color: #0094ff;
    }
</style>